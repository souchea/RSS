<Window x:Class="RSSAgregator.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1024">
	<Grid x:Name="MainGrid">
		<Grid.RowDefinitions>
			<RowDefinition x:Name="UpSide" Height="25"/>
			<RowDefinition x:Name="DownSide"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="LeftSide"/>
			<ColumnDefinition x:Name="Spacer" Width="3"/>
			<ColumnDefinition x:Name="RightSide" Width="4*"/>
		</Grid.ColumnDefinitions>
       
		<GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch" Grid.Row="0" Grid.RowSpan="2" Background="#FFB9B9B9"/>
       
        <Menu Margin="0" Grid.ColumnSpan="3" Name="MainMenu" IsMainMenu="True">
            <MenuItem Name="MAccount" Header="A_ccount">
                <MenuItem Name="SMLogin" Header="Log_in"></MenuItem>
                <MenuItem Name="SMLogout" Header="Log_out"></MenuItem>
            </MenuItem>
            <MenuItem Name="MFeeds" Header="_Feeds">
                <MenuItem Name="SBAddFeed" Header="_Add"></MenuItem>
                <MenuItem Name="SBDelFeed" Header="_Remove"></MenuItem>
                <MenuItem Name="SBEditFeed" Header="_Edit"></MenuItem>
            </MenuItem>
            <MenuItem Name="MGroups" Header="_Groups">
                <MenuItem Name="SBAddGroup" Header="_Add"></MenuItem>
                <MenuItem Name="SBDelGroup" Header="_Remove"></MenuItem>
                <MenuItem Name="SBEditGroup" Header="_Edit">
            </MenuItem>
            </MenuItem>
        </Menu>
        
        <ListView Name="CategoryList" Grid.Column="0" Grid.Row="1" Background="DarkBlue">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Label Name="ItemName"/>
                        <Label Grid.Column="1" Name="SubItemCount"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Name="FeedList" Grid.Column="0" Grid.Row="1" Background="Green" Visibility="Hidden">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Label Name="ItemName"/>
                        <Label Grid.Column="1" Name="SubItemCount"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
       
        <WebBrowser Name="ItemContent" Grid.Column="2" Grid.Row="2" Visibility="Hidden"></WebBrowser>
        <ListView Name="ItemsList" Grid.Column="2" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.ColumnSpan="2" HorizontalAlignment="Left" Name="ItemTitle"/>
                        <Label Grid.Row="1" HorizontalAlignment="Left" Name="ItemAuthor"/>
                        <Label Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Name="ItemPublishDate"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Frame Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Width="500" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center">
        </Frame>
	</Grid>
</Window>
